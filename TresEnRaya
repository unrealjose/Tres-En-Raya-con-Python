			break
		if Q==True and W==True and E==True and A==True and S==True and D==True and Z==True and X==True and C==True:
			print("Empate")
			os.system('pause')
			exit()
	ComprobarSiJugador1HaGanado()
	while True:
		print(Jugador2)
