import os

def Inicio():
	print("  .---.---.---.")
	print("  | q | w | e |")
	print("  :---:---:---:")
	print("  | a | s | d |")
	print("  :---:---:---:")
	print("  | z | x | c |")
	print("  .---.---.---.")

def Juego():
	print("  .---.---.---.")
	print("  | "+q+" | "+w+" | "+e+" |")
	print("  :---:---:---:")
	print("  | "+a+" | "+s+" | "+d+" |")
	print("  :---:---:---:")
	print("  | "+z+" | "+x+" | "+c+" |")
	print("  .---.---.---.")

def ComprobarSiJugador1HaGanado():
	if q=="X" and w=="X" and e=="X":
		print("########################")
		print("Victoria del jugador 1")
		print("########################")
		os.system('pause')
		exit()
	if a=="X" and s=="X" and d=="X":
		print("########################")
		print("Victoria del jugador 1")
		print("########################")
